                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Products")">Online Fertilizer</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a href="@Url.Action("Index", "Products")" class="nav-link">Home</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">About</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Blog</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Contact</a></li>
                    @{
                        OnlineFertilizerWeb.Domain.Cart cart = (OnlineFertilizerWeb.Domain.Cart)Session["Cart"];
                        int itemInCart = 0;
                        if (cart != null) { itemInCart = cart.Products.Count(); }
                    }
                    <li class="nav-item"><a href="@Url.Action("Index", "Cart")" class="nav-link"><span class="icon-shopping_cart">[@itemInCart]</span></a></li>
                    @{
                        OnlineFertilizerWeb.Models.Account user = (OnlineFertilizerWeb.Models.Account)Session["USER"];
                    }
                    @if (user == null)
                    {
                        <li class="nav-item "><a href="@Url.Action("Login", "Account")" class="nav-link">Login</a></li>

                    }
                    @if (user != null)
                    {
                        <li class="nav-item dropdown">
                            <a href="@Url.Action("Profile", "Account")" class="nav-link ">@user.Name</a>
                            <ul class="dropdown-menu">
                                <li class="nav-item dropdown-item"> <a href="@Url.Action("History", "Account")" class="nav-link text-dark">History</a></li>
                                <li class="nav-item dropdown-item"> <a href="@Url.Action("Logout", "Account")" class="nav-link text-danger">Logout</a></li>
                            </ul>
                        </li>

                    }
                </ul>
            </div>
        </div>
    </nav>
    <!-- END nav -->

