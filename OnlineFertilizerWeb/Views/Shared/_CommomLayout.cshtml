    <script>
        $(document).ready(function () {
            var quantitiy = 0;
            $('.quantity-right-plus').click(function (e) {

                // Stop acting like a button
                e.preventDefault();
                // Get the field name
                var quantity = parseInt($('#quantity').val());

                // If is not undefined

                $('#quantity').val(quantity + 1);


                // Increment

            });

            $('.quantity-left-minus').click(function (e) {
                // Stop acting like a button
                e.preventDefault();
                // Get the field name
                var quantity = parseInt($('#quantity').val());

                // If is not undefined

                // Increment
                if (quantity > 1) {
                    $('#quantity').val(quantity - 1);
                }
            });

            $('#category_@ViewBag.selectCategory').addClass('active');
            $('#Password').on('keyup',function() {
                  var result = $(this).val(),
                      $text = $('#RePasswordLogin')
                  if (result != undefined) {
                    $text.val(result);
                  } else {
                    $text.val('');
                  }
                })
        });
    </script>
</body>
</html>